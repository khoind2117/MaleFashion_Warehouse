{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "bundler",
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022", "dom"],
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
          "@common-lib": ["src/common-lib/src/index.ts"],
          "@env": ["src/shared-env/src/index.ts"]
        },
        "useDefineForClassFields": false
    },
    "exclude": ["node_modules", "tmp"]
}
